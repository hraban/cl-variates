(in-package common-lisp-user)

;;; ---------------------------------------------------------------------------
;;; glu Utilities
;;; ---------------------------------------------------------------------------

(glu-define-logical-pathname-translations (cl-variates)
  (source)
  (utils (:back :back "utils" "dev"))
  (glu-math (:back :back "glu-math" "dev"))
  (lift  (:back :back "lift" "dev")))

;;; ---------------------------------------------------------------------------

(setf (glu-system-source-file 'lift)
      "cl-variates:lift;lift.system"
      (glu-system-source-file :mcl-floating-point)
      "cl-variates:utils;glu-utilities.system")


;;; ---------------------------------------------------------------------------
;;; system definition 
;;; ---------------------------------------------------------------------------

(define-glu-system :cl-variates 
  ("package"
   "variates")
  :base-dir "cl-variates:source;"
  :bin-identifiers (:platform :vendor)
  :include-in-menu nil
  :top-level nil
  :depends-on (cl-mathstats))

;;; ---------------------------------------------------------------------------

#+Ignore
(define-glu-module :variates-copying 
  ("variates-copying")
  :system cl-variates
  :depends-on (copying))

;;; ---------------------------------------------------------------------------

#+Ignore
(define-glu-module :variates-utilities 
  ("utilities-integration")
  :system cl-variates
  :depends-on (variates-copying))

;;; ---------------------------------------------------------------------------

#+Ignore
(define-glu-module :variates-fpc
  (#+MCL
   "mcl-variates")
  :system cl-variates
  :depends-on (cl-variates mcl-floating-point))

;;; ---------------------------------------------------------------------------

#+Ignore
(define-glu-module :variates-thread-safe 
  ("variates-thread-safe")
  :system cl-variates
  :depends-on (meta-dynamic-classes))


